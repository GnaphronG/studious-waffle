{
  "plugins": ["prettier"],

  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },

  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },

  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],

  "rules": {
    // prettier
    "prettier/prettier": "error"
  }
}
